    def  "file closed"

__program:
    mov  a1, 0        ; negative immediate number
    call 1, 0, print_test
    mov  a1, 0
    addf a1, -120.01
    int  3
    call 0, 0, newline

    mov  a1, 1        ; string addition & flush
    call 1, 0, print_test
    mov  a1, str_test_addition
    int  9
    int  9
    mov  a1, 0
    int  10
    call 0, 0, newline
    call 0, 0, newline

    mov  a1, 2        ; clock
    call 1, 0, print_test
    call 0, 0, newline
    mov  a1, str_test_clock_before
    int  4
    int  11
    mov  a1, rv
    int  2
    call 0, 0, newline
    call 0, 0, kill_time
    mov  a1, str_test_clock_after
    int  4
    int  11
    mov  a1, rv
    int  2
    call 0, 0, newline
    mov  a1, str_test_clock_sleep
