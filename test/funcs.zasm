    header

__data:
    def  0x20000
    def  0x4000
    def  __constant
    def  __program

__constant:
str_test:
    def  "test of "
str_colon:
    def  ": "

str_test_neg:
    def  "negative immediate number"
str_test_addition:
    def  "string addition"
str_test_clock:
    def  "clock"
str_test_file:
    def  "file"
str_array_test:
    def  str_test_neg, str_test_addition, str_test_clock
    def  str_test_file

