	DEF  '\x93', '\x94', '\x86'   ; zvm bytecode header
	DEF  '\x00', '\x01'           ; version: 000.001
__data:
	DEF  0x20000                  ; memory size
	DEF  0x4000                   ; argument stack size
	DEF  __constant               ; constant pool
	DEF  __program                ; program entrance
__constant:
hello:
	DEF  "Hello world.\n"
__program:
	MOV  R1, hello                ; R1 = arg_stack_size + 0 = 16384
loop:
	LD   A1, R1
	INT  0
	ADD  R1, 1
	AND  A1, 0xFF
	JNZ  A1, loop                 ; if A1 != 0 goto 6
	END
